<p id="notice"><%= notice %></p>

<h1><%= params['screen'] %></h1>

<p><%= @companies.count %> Companies</p>

<table class="summary">
  <thead>
    <tr>
      <th></th>
      <th>Debt</th>
      <th>Revenue</th>
      <th>EPS</th>
      <th>FCF</th>
      <th>Equity</th>
      <th>ROIC</th>
      <th></th>
      <th>Discount</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td class="symbol"><%= link_to company.symbol, company %></td>
		<%
		debt = number_with_precision(company.debt_ratio, precision: 1)
		revenue = number_with_precision(company.revenue_avg_growth5, precision: 1)
		eps = number_with_precision(company.eps_avg_growth5, precision: 1)
		fcf = number_with_precision(company.free_cash_flow_avg_growth5, precision: 1)
		equity = number_with_precision(company.equity_avg_growth5, precision: 1)
		roic = number_with_precision(company.roic_avg5, precision: 1)
		%>
        <td class="<%= debt_temperature(debt.to_f) %>"><%= debt %></td>
        <td class="<%= big5_temperature(revenue.to_f) %>"><%= revenue %></td>
        <td class="<%= big5_temperature(eps.to_f) %>"><%= eps %></td>
        <td class="<%= big5_temperature(fcf.to_f) %>"><%= fcf %></td>
        <td class="<%= big5_temperature(equity.to_f) %>"><%= equity %></td>
        <td class="<%= big5_temperature(roic.to_f) %>"><%= roic %></td>
		
		<td class="great_company <%= company.great %>"><%= link_to 'G', company %></td>
		<td><%= number_with_precision(company.discount, precision: 1) %>%</td>
        <!-- <td><%= link_to 'Show', company %></td> -->
        <!-- <td><%= link_to 'Edit', edit_company_path(company) %></td> -->
        <!-- <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

